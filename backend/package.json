{
  "name": "pov-companion-backend",
  "version": "1.0.0",
  "description": "Production-grade MVP backend for POV - Companion FlutterFlow app",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest --runInBand",
    "test:unit": "jest --testPathPattern=unit --runInBand",
    "test:integration": "jest --testPathPattern=integration --runInBand --testTimeout=60000",
    "lint": "eslint src test --ext .ts"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^5.0.0",
    "@google-cloud/tasks": "^4.0.0",
    "express": "^4.21.0",
    "firebase-admin": "^12.0.0",
    "openai": "^4.52.0",
    "pino": "^9.4.0",
    "pino-http": "^10.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0"
  }
}
